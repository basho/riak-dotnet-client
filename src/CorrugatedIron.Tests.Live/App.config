<configuration>
  <configSections>
    <section name="riak1NodeConfiguration" type="CorrugatedIron.Config.RiakClusterConfiguration, CorrugatedIron" />
    <section name="riak1NodeOnTheFlyConfiguration" type="CorrugatedIron.Config.RiakClusterConfiguration, CorrugatedIron" />
    <section name="riak3NodeConfiguration" type="CorrugatedIron.Config.RiakClusterConfiguration, CorrugatedIron" />
    <section name="riakLoadTestConfiguration" type="CorrugatedIron.Config.RiakClusterConfiguration, CorrugatedIron" />
    <section name="riakOnTheFlyLoadTestConfiguration" type="CorrugatedIron.Config.RiakClusterConfiguration, CorrugatedIron" />
    <section name="riakHaproxyConfiguration" type="CorrugatedIron.Config.RiakExternalLoadBalancerConfiguration, CorrugatedIron"/>
  </configSections>

  <riakHaproxyConfiguration nodePollTime="5000"
                            defaultRetryWaitTime="200"
                            defaultRetryCount="3">
    <authentication username="riakpass" password="Test1234"
       certificateAuthorityFile="..\..\..\..\tools\test-ca\certs\cacert.pem"
       clientCertificateFile="..\..\..\..\tools\test-ca\certs\riakuser-client-cert.pfx"
       clientCertificateSubject="E=riakuser@myorg.com, CN=riakuser, OU=Development, O=Basho Technologies, S=WA, C=US" />
    <target name="dev1"
            hostAddress="riak-test"
            pbcPort="8080"
            restScheme="http"
            restPort="8000"
            poolSize="30" />
  </riakHaproxyConfiguration>

  <riak1NodeConfiguration nodePollTime="5000"
                          defaultRetryWaitTime="200"
                          defaultRetryCount="3">
    <authentication username="riakpass" password="Test1234"
       certificateAuthorityFile="..\..\..\..\tools\test-ca\certs\cacert.pem"
       clientCertificateFile="..\..\..\..\tools\test-ca\certs\riakuser-client-cert.pfx"
       clientCertificateSubject="E=riakuser@myorg.com, CN=riakuser, OU=Development, O=Basho Technologies, S=WA, C=US" />
    <nodes>
      <node name="dev1"
            hostAddress="riak-test"
            pbcPort="10017"
            restScheme="http"
            restPort="10018"
            poolSize="5" />
      <!--idleTimeout="1000" />-->
    </nodes>
  </riak1NodeConfiguration>
  <riak1NodeOnTheFlyConfiguration nodePollTime="5000"
                          defaultRetryWaitTime="200"
                          defaultRetryCount="3">
    <authentication username="riakpass" password="Test1234"
       certificateAuthorityFile="..\..\..\..\tools\test-ca\certs\cacert.pem"
       clientCertificateFile="..\..\..\..\tools\test-ca\certs\riakuser-client-cert.pfx"
       clientCertificateSubject="E=riakuser@myorg.com, CN=riakuser, OU=Development, O=Basho Technologies, S=WA, C=US" />
    <nodes>
      <node name="dev1"
            hostAddress="riak-test"
            pbcPort="10017"
            restScheme="http"
            restPort="10018"
            poolSize="0" />
      <!--idleTimeout="1000" />-->
    </nodes>
  </riak1NodeOnTheFlyConfiguration>

  <riakLoadTestConfiguration nodePollTime="5000"
                             defaultRetryWaitTime="200"
                             defaultRetryCount="3">
    <authentication username="riakpass" password="Test1234"
       certificateAuthorityFile="..\..\..\..\tools\test-ca\certs\cacert.pem"
       clientCertificateFile="..\..\..\..\tools\test-ca\certs\riakuser-client-cert.pfx"
       clientCertificateSubject="E=riakuser@myorg.com, CN=riakuser, OU=Development, O=Basho Technologies, S=WA, C=US" />
    <nodes>
      <node name="dev1"
            hostAddress="riak-test"
            pbcPort="10017"
            restScheme="http"
            restPort="10018"
            poolSize="20" />
      <!--idleTimeout="1000" />-->
      <node name="dev2"
            hostAddress="riak-test"
            pbcPort="10027"
            restScheme="http"
            restPort="10028"
            poolSize="20" />
      <!--idleTimeout="1000" />-->
      <node name="dev3"
            hostAddress="riak-test"
            pbcPort="10037"
            restScheme="http"
            restPort="10038"
            poolSize="20" />
      <!--idleTimeout="1000" />-->
      <node name="dev4"
            hostAddress="riak-test"
            pbcPort="10047"
            restScheme="http"
            restPort="10048"
            poolSize="20" />
      <!--idleTimeout="1000" />-->
    </nodes>
  </riakLoadTestConfiguration>

  <riakOnTheFlyLoadTestConfiguration nodePollTime="5000"
                             defaultRetryWaitTime="200"
                             defaultRetryCount="3">
    <authentication username="riakpass" password="Test1234"
       certificateAuthorityFile="..\..\..\..\tools\test-ca\certs\cacert.pem"
       clientCertificateFile="..\..\..\..\tools\test-ca\certs\riakuser-client-cert.pfx"
       clientCertificateSubject="E=riakuser@myorg.com, CN=riakuser, OU=Development, O=Basho Technologies, S=WA, C=US" />
    <nodes>
      <node name="dev1"
            hostAddress="riak-test"
            pbcPort="10017"
            restScheme="http"
            restPort="10018"
            poolSize="0" />
      <!--idleTimeout="1000" />-->
      <node name="dev2"
            hostAddress="riak-test"
            pbcPort="10027"
            restScheme="http"
            restPort="10028"
            poolSize="0" />
      <!--idleTimeout="1000" />-->
      <node name="dev3"
            hostAddress="riak-test"
            pbcPort="10037"
            restScheme="http"
            restPort="10038"
            poolSize="0" />
      <!--idleTimeout="1000" />-->
      <node name="dev4"
            hostAddress="riak-test"
            pbcPort="10047"
            restScheme="http"
            restPort="10048"
            poolSize="0" />
      <!--idleTimeout="1000" />-->
    </nodes>
  </riakOnTheFlyLoadTestConfiguration>
</configuration>
